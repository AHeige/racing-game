{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "prettier",
        "plugin:react/recommended",
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-unused-vars": "warn",
        "react/display-name": "warn",
        "react/prop-types": "warn",
        "react/react-in-jsx-scope": "warn",
        "semi": "warn"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
